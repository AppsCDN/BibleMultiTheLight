<resources>
    <style name="AppTheme" parent="AppThemeLight">
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/red</item>
        <item name="cardBgColor">@color/cardview_light_background</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorAccent">@color/red</item>
        <item name="cardBgColor">@color/cardview_dark_background</item>
    </style>

    <style name="AppThemeDev" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:textColorPrimary">@color/blue</item>        <!-- Selected Tab header -->
        <item name="cardBgColor">@color/cardview_light_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
