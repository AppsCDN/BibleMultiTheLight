<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="AppThemeLight">
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/red</item>
        <item name="cardBgColor">@color/cardview_light_background</item>
        <item name="buttonNormalBgColor">#d6d7d7</item>
        <item name="buttonFocusBorderColor">#2ebadc</item>
        <item name="buttonFocusBgColor">#2ebadc</item>
        <item name="textFocusBorderColor">#2ebadc</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/red</item>
        <item name="cardBgColor">@color/cardview_dark_background</item>
        <item name="buttonNormalBgColor">#5a595b</item>
        <item name="buttonFocusBorderColor">#2ebadc</item>
        <item name="buttonFocusBgColor">@color/blue</item>
        <item name="textFocusBorderColor">#2ebadc</item>
    </style>

    <style name="AppThemeDev" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:textColorPrimary">@color/blue</item>        <!-- Selected Tab header -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" tools:ignore="UnusedResources"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" tools:ignore="UnusedResources"/>
</resources>
