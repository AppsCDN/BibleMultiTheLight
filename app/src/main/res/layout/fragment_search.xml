        <!-- Navigation -->
        <LinearLayout
            android:id="@+id/llBookTitle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorPrimary">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" \u25c1"
                android:gravity="top|start|bottom"
                android:background="?attr/colorPrimary"
                android:textColor="?attr/colorControlNormal"
                />
<!--
            android:textColor="@color/textColorPrimary"
            android:background="#80000000"
-->

            <Button
                android:id="@+id/tvBookTitle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:maxLines="1"
                android:longClickable="false"
                android:text="@string/tvBookTitle"
                android:textAllCaps="false"
                android:background="?attr/colorPrimary"
                android:textColor="?attr/colorControlNormal"
                />
<!--
            android:textColor="?attr/bookTitleForeground"

            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/foreground_material_dark"
            android:background="#80000000"
-->

            <Button
                android:id="@+id/btnForward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u25b7 "
                android:layout_weight="0"
                android:gravity="top|bottom|end"
                android:background="?attr/colorPrimary"
                android:textColor="?attr/colorControlNormal"
                />
<!--
            android:background="#80000000"
-->
        </LinearLayout>

        <!-- Description -->
        <ScrollView
            android:id="@+id/svDesc"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:visibility="gone">

            <android.support.v7.widget.CardView
                android:id="@+id/cvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                card_view:cardBackgroundColor="?attr/cardBgColor">

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                />
            </android.support.v7.widget.CardView>
        </ScrollView>

        <!-- Search -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/card_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</RelativeLayout>
